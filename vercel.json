{
  "version": 2,
  "name": "cold-calling-coach",
  "builds": [
    {
      "src": "api/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    },
    {
      "src": "templates/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/templates/(.*)",
      "dest": "/templates/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/app.py"
    },
    {
      "src": "/favicon.ico",
      "dest": "/static/favicon.ico"
    },
    {
      "src": "/(.*)",
      "dest": "/api/app.py"
    }
  ],
  "env": {
    "REACT_APP_SUPABASE_URL": "@supabase-url",
    "REACT_APP_SUPABASE_ANON_KEY": "@supabase-anon-key", 
    "REACT_APP_SUPABASE_SERVICE_KEY": "@supabase-service-key",
    "REACT_APP_OPENAI_API_KEY": "@openai-api-key",
    "REACT_APP_ELEVENLABS_API_KEY": "@elevenlabs-api-key",
    "REACT_APP_ELEVENLABS_VOICE_ID": "@elevenlabs-voice-id",
    "REACT_APP_RESEND_API_KEY": "@resend-api-key",
    "REACT_APP_APP_URL": "@app-url",
    "REACT_APP_ADMIN_EMAIL": "@admin-email",
    "FLASK_SECRET_KEY": "@flask-secret-key",
    "FLASK_ENV": "production"
  },
  "regions": ["iad1"],
  "functions": {
    "api/app.py": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false,
  "redirects": [
    {
      "source": "/dashboard/",
      "destination": "/dashboard"
    },
    {
      "source": "/roleplay/(.*)/$",
      "destination": "/roleplay/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/roleplay/:id",
      "destination": "/api/app.py"
    }
  ]
}